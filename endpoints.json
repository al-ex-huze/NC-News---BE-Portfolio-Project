        }
    },
    "GET /api/articles/:article_id/comments": {
        "description": "serves an array of all comments for the given article if sorted by descending date order",
        "format": "JSON",
        "queries": [],
        "exampleResponse": {
            "comments": [
                {
                    "comment_id": 5,
