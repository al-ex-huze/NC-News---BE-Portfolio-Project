{
    "GET /api": {
        "description": "serves up a json representation of all the available endpoints of the api"
    },
    "GET /api/topics": {
        "description": "serves an array of all topics",
        "queries": [],
        "exampleResponse": {
            "topics": [{ "slug": "football", "description": "Footie!" }]
        }
    },
    "GET /api/articles": {
        "description": "serves an array of all articles sorted by descending date order",
        "format": "JSON",
        "queries": [
            { "topic": "filter by topic" },
            {
                "sort_by": "sort by the following columns: author, title, article_id, topic, created_at, votes, comment_count"
            },
            { "order": "order sort_by by asc or desc" }
        ],
        "exampleResponse": {
            "articles": [
                {
                    "author": "weegembump",
                    "title": "Seafood substitutions are increasing",
                    "article_id": 1,
                    "topic": "cooking",
                    "created_at": "2018-05-30T15:59:13.341Z",
                    "votes": 0,
                    "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
                    "comment_count": 6
                }
            ]
        }
    },
    "GET /api/articles/:article_id": {
        "description": "serves up a json object of an article from articles with corresponding input id",
        "format": "JSON",
        "queries": [],
        "exampleResponse": {
            "author": "butter_bridge",
            "title": "Living in the shadow of a great man",
            "article_id": 1,
            "body": "I find this existence challenging",
            "topic": "mitch",
            "created_at": "2020-07-09T20:11:00.000Z",
            "votes": 100,
            "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
            "comment_count": 11
        }
    },
    "GET /api/articles/:article_id/comments": {
        "description": "serves an array of all comments for the given article if sorted by descending date order",
        "format": "JSON",
        "queries": [],
        "exampleResponse": {
            "comments": [
                {
                    "comment_id": 5,
                    "votes": 0,
                    "created_at": "020-11-03T21:00:00.000Z",
                    "author": "icellusedkars",
                    "body": "I hate streaming noses",
                    "article_id": 1
                }
            ]
        }
    },
    "POST /api/articles/:article_id/comment": {
        "description": "posts a comment, of username and body, to the specified article and returns the full comment object",
        "format": "JSON",
        "queries": [],
        "exampleResponse": {
            "comment": {
                "comment_id": 19,
                "body": "test body",
                "article_id": 3,
                "author": "butter_bridge",
                "votes": 0,
                "created_at": "2024-05-29T13:48:31.656Z"
            }
        }
    },
    "PUT /api/articles/:article_id": {
        "description": "returns an object of the updated article with votes adjusted accordingly",
        "format": "JSON",
        "queries": [],
        "exampleResponse": {
            "article": {
                "article_id": 1,
                "title": "Living in the shadow of a great man",
                "topic": "mitch",
                "author": "butter_bridge",
                "body": "I find this existence challenging",
                "created_at": "2020-07-09T20:11:00.000Z",
                "votes": 1100,
                "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
            }
        }
    },
    "DELETE /api/comments/:comment_id": {
        "description": "deletes comment, returning no content",
        "format": "JSON",
        "queries": [],
        "exampleResponse": {}
    },
    "GET /api/users": {
        "description": "deletes comment, returning no content",
        "format": "JSON",
        "queries": [],
        "exampleResponse": {
            "users": [
                {
                    "username": "butter_bridge",
                    "name": "jonny",
                    "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
                }
            ]
        }
    }
}
